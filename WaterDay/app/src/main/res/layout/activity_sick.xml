<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sick_back2"
    >
    <LinearLayout
        android:layout_marginTop="350dp"
        android:layout_width="366dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_Sick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/TextView_gender"
        android:layout_width="115dp"
        android:layout_height="34dp"
        android:textColor="@color/textcolor"
        android:text="What' wrong"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"/>

    <Spinner
        android:id="@+id/sick_spin"
        android:layout_width="match_parent"
        android:minHeight="34dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout_Sick"
        android:layout_alignStart="@+id/linearLayout_Sick"
        android:id="@+id/linearLayout_weight"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/TextView_weight1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Weight(now)"
            android:gravity="center"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="0.21" />

        <EditText
            android:id="@+id/editText_weight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:ems="10"
            android:gravity="center"
            android:textColor="@color/textcolor"
            android:inputType="number"
            android:text="60" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/linearLayout_weight"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout_weight"
        android:id="@+id/linearLayout6">
        <TextView
            android:id="@+id/TextView_waterneed"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Needed water"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/TextView_waterNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="3000ml"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="6" />


    </LinearLayout>

    <Button
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Submit"
        android:id="@+id/submitbtn"
        android:textColor="#ffffff"
        android:background="@drawable/shape2"
        android:onClick="Submit"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </Button>



</RelativeLayout>
